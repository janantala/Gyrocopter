{
  "manifest_version": 2,

  "name": "Gyrocopter",
  "description": "Gyroscope Simulator.",
  "version": "0.3.0",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  // "browser_action": {
  //   "default_icon": "images/icon128.png",
  //   "default_popup": "index.html"
  // },

  "devtools_page": "devtools.html",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>"
  ]
}
